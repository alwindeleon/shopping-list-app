  body
    nav.navbar.navbar-inverse.navbar-static-top
      .container-fluid
        
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/")
            span.glyphicon.glyphicon-home(aria-hidden="true")
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
          form.navbar-form.navbar-left(enctype='application/json',action="/charities",method="POST")
            .form-group
              input.form-control#searchBar(type="text",name="tag", placeholder="Search")
            button.btn.btn-default.searchButton#search-button(type="submit")
              span.glyphicon.glyphicon-search(aria-hidden="true")
          ul.nav.navbar-nav.navbar-right.list-inline
            li
              a(href="#") About Us
            li
              
              if logged == false
                a#log(href="#") Login
              else
                a#log(href="/") Logout
